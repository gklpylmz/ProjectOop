@model EntityLayer.Concrete.Product
@{
    ViewData["Title"] = "AddProduct";
    Layout = "~/Views/Shared/_CoreLayout.cshtml";
}

<h1>Ürün Ekle</h1>
<br />
<form method="post" asp-action="AddProduct" asp-controller="Product">
    <div class="form-group">
        <label for="email">Ürün Adı</label>
        <input type="text" asp-for="ProductName" class="form-control" id="email">
        <span asp-validation-for="ProductName" ></span>
    </div>
    <div class="form-group">
        <label for="pwd">Ürün Fiyatı</label>
        <input type="text" asp-for="ProductPrice" class="form-control" id="pwd">
        <span asp-validation-for="ProductPrice"></span>
    </div>
    <div class="form-group">
        <label for="email">Stok</label>
        <input type="text" asp-for="ProductStock" class="form-control" id="email">
        <span asp-validation-for="ProductStock"></span>
    </div>
    <br />
    <button type="submit" class="btn btn-outline-success">Ekle</button>
</form>
