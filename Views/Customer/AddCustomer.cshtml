@model EntityLayer.Concrete.Customer
@{
    ViewData["Title"] = "AddCustomer";
    Layout = "~/Views/Shared/_CoreLayout.cshtml";
}

<h1>Müşteri Ekle</h1>
<br />
<form method="post" asp-action="AddCustomer" asp-controller="Customer">
    <div class="form-group">
        <label for="email">Müşteri Adı</label>
        <input type="text" asp-for="CustomerName" class="form-control" id="email">
        <span asp-validation-for="CustomerName"></span>
    </div>
    <div class="form-group">
        <label for="email">Meslek Adı</label>
        <select class="form-control" asp-for="JobID" asp-items="ViewBag.SelectList"></select>
    </div>
    <div class="form-group">
        <label for="pwd">Şehir</label>
        <input type="text" asp-for="CustomerCity" class="form-control" id="pwd">
        <span asp-validation-for="CustomerCity"></span>
    </div>
    <br />
    <button type="submit" class="btn btn-outline-success">Ekle</button>
</form>


