@using EntityLayer.Concrete
@model List<Customer>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_CoreLayout.cshtml";
}
<br />
<h1>Müşteri Listesi</h1>
<table class="table table-condensed">
    <thead>
        <tr>
            <th>Müşteri Ad Soyad</th>
            <th>Meslek</th>
            <th>Şehir</th>
            <th>Düzenle</th>
            <th>Sil</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CustomerName</td>
                <td>@item.Job.JobName</td>
                <td>@item.CustomerCity</td>
                <td><a href="/Customer/EditCustomer/@item.CustomerID" class="btn btn-outline-info">Düzenle</a></td>
                <td><a href="/Customer/RemoveCustomer/@item.CustomerID" class="btn btn-outline-danger">Sil</a></td>
            </tr>
        }
    </tbody>
</table>
<a href="/Customer/AddCustomer/" class="btn btn-outline-primary">Müşteri Ekle</a>
